mixin bg-video(dataTheme)
  +fragment({
    mobileStyle: `
        display: flex;
        flex-direction: column;
        align-items: center;
        background: #121212;
        height: 500px
      `,
    desktopStyle: `
      border-radius: 8px;
    `,
    dataTheme: dataTheme,
  })
    +fragment-background({
      video: 'https://barashev.com/image/video/Barashev.mp4'
    })(href="#")
